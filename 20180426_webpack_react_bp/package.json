{
  "name": "boilerplate",
  "version": "0.0.1",
  "scripts": {
    "start": "webpack-dev-server --hot --mode development --disable-host-check --host 0.0.0.0",
    "build": "rm -rf dist/*; yarn webpack --config webpack.config.babel.js",
    "build:dev": "yarn build --mode development",
    "build:prod": "yarn build --mode production"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.10",
    "html-webpack-plugin": "^3.0.6",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0"
  }
}
